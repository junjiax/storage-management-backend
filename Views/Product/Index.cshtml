@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Products</h1>
    <a asp-action="Create" class="btn btn-primary">Add New Product</a>
</div>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductName</td>
                    <td>@(product.Category?.CategoryName ?? "-")</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@(product.Inventory?.Quantity ?? 0)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-sm btn-info">Details</a>
                        <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteConfirmationModal">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<form id="deleteForm" asp-action="Delete" method="post">
    <input type="hidden" id="deleteId" name="id" value="" />
</form>

@await Html.PartialAsync("_DeleteConfirmation", "product")